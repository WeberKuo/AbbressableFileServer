      <Content Update="wwwroot\iOS\frank.assetbundle">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <Content Update="wwwroot\iOS\frank.manifest">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <Content Update="wwwroot\iOS\iOS.assetbundle">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
